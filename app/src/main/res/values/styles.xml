<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="SectionDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">@dimen/margin_4</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_4</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="WeatherGridStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_4</item>
        <item name="android:columnCount">5</item>
        <item name="android:rowCount">2</item>
    </style>

    <style name="WeatherIconSmallStyle">
        <item name="android:padding">10dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
    </style>

    <style name="WeatherPreviewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:layout_marginBottom">@dimen/margin_4</item>
    </style>

    <style name="WeatherDetailsStyle">
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">center</item>

        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_20</item>
    </style>

    <style name="WeatherDetailsGridStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_4</item>
        <item name="android:columnCount">2</item>
    </style>

    <style name="WeatherDetailsCardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="CardViewTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="android:layout_marginBottom">@dimen/margin_24</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardViewIconStyle">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/margin_8</item>
    </style>

    <style name="ErrorLoadingImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">50dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="CityNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_32</item>
    </style>


</resources>